@model ApplicationRole

@{
    ViewData["Title"] = "Update";
}

<h1>Update User</h1>
<br />
<br />

<div class="row">
	<div class="col-6">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<form asp-action="Update" asp-controller="Roles">

			<partial name="PartialViews/CreateOrUpdatePartialView" />

			<br />
			<a asp-action="AddOrRemoveUsers" asp-controller="Roles" asp-route-roleId="@Model.Id" class="btn btn-primary">Add Or Remove Users</a>
			<br />
			<br />
			<input type="submit" value="Update" class="btn btn-primary" /> |
			<a asp-action="Index" class="btn btn-light">Back To List</a>
		</form>
	</div>
</div>

