@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ResetPassword">
			<div asp-validation-summary="All"></div>
			<input type="hidden" asp-for="@Model.Email">
			<input type="hidden" asp-for="@Model.Token">
			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
			<input type="submit" value="RESET PASSWORD">
		</form>
	</div>
</div>
